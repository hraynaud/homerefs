!!!
%html(lang="en")
  %head
    %meta(charset="utf-8")
    %title= content_for?(:title) ? yield(:title) : "HomeRefs"
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %meta(name="description" content="")
    %meta(name="author" content="")
    = csrf_meta_tags
    = yield(:head)
    = stylesheet_link_tag "application", :media => "all"

    :css
      body {
        padding-top: 60px;
        padding-bottom: 40px;
      }
      .sidebar-nav {
        padding: 9px 0;
      }

    /[if lt IE 9]
      %script(src="http://html5shiv.googlecode.com/svn/trunk/html5.js")

        %link(rel="shortcut icon" href="images/favicon.ico")
    %link(rel="apple-touch-icon" href="images/apple-touch-icon.png")
    %link(rel="apple-touch-icon" sizes="72x72" href="images/apple-touch-icon-72x72.png")
    %link(rel="apple-touch-icon" sizes="114x114" href="images/apple-touch-icon-114x114.png")

  %body
    .navbar.navbar-fixed-top
      .navbar-inner
        .container
          = link_to "HomeRefs", :root, class: "brand"
          %ul.nav.pull-right
            %li
              = link_to "How It Works", '/how-it-works'
            %li
              = link_to "About",'/about'
            %li
              = link_to "FAQ",'/faq'
            %li
              = link_to "Contact", 'contact'
            - if user_logged_in?
              %li
                = link_to get_current_user.email, user_path(get_current_user.id)
              %li
                = link_to "Log out", logout_path
    .container
      .row
        .span12
          - flash.each do |name, msg|
            = content_tag :div, msg.html_safe, :class =>"#{name}", :id => "flash_#{name}"
          = yield

      %hr

      %footer
        %p
          HomeRefs Copyright &copy; 2012. All Rights Reserved.
          = link_to "Feedback", new_feedback_path

    = javascript_include_tag "jquery", "application"
    = yield :body_end


