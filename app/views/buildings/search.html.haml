= form_tag(results_path, :method => :get) do
  %p Address
  %input.typeahead{:name => "address", :type => "text", "data-provide" => 'typeahead'}/

  %p Zipcode
  = text_field_tag :zipcode
  %p Neighborood
  %br
  = select_tag :neighborhood, options_from_collection_for_select(Neighborhood.all(:order => 'name'), :id, :name), :prompt => "Select your hood"
  = submit_tag 'submit'

- content_for :body_end do
  :javascript
    $('.typeahead').typeahead({source: #{Building.all.map(&:address)}});
