= simple_form_for @building do |f|

  .field
    = f.input :address
  .field
    = f.association :neighborhood, :collection => Neighborhood.all(:order => 'name')
  .field
    = f.input :zipcode
  .field
    %ul.inline-list
      %li.inline-field
        = f.input :elevator
      %li.inline-field
        = f.input :doorman
      %li.inline-field
        = f.input :super
      %li.inline-field
        = f.input :coop
  .field
    = f.input :construction_type, :collection => [["Pre-war",1], ["Post-War",2], ["New Construction",3]]

  .actions
    = f.submit :submit, class: "btn btn-primary btn-large"
